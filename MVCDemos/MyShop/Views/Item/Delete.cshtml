@model Item

<h2>Delete Item</h2>

<div>
  <h4>Item</h4>
  <hr />
  @* hr is horizontal rule*@
  <dl class="row">
    <dt class="col-sm-2">Item Id</dt>
    <dd class="col-sm-10">@Model.ItemId</dd>

    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Price</dt>
    <dd class="col-sm-10">@Model.Price</dd>

    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Description</dd>

    <dt class="col-sm-2">ImageUrl</dt>
    <dd class="col-sm-10">@Model.ImageUrl</dd>
  </dl>

  <form asp-action="DeleteConfirmed" asp-route-id="@Model.ItemId" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Table" class="btn btn-secondary">Cancel</a>
  </form>
</div>